-# 新規登録画面！
<!DOCTYPE html>
.header
  %h1
    = image_tag 'logo.png', alt: '', height: '49px', width: '185px', class: ''

.up__main
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .up__main__top
      .up__main__top--inner
        会員情報入力
    .up__main__bottom
      .field
        = f.label :ニックネーム
        %span
          必須
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '例) フリマ太郎'
        .second
          = f.label :メールアドレス
          %span
            必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: '例) PC・携帯どちらでも可'
        .second
          = f.label :パスワード
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '6文字以上の半角英数字'
        .second
          = f.label :パスワード
          %span
            必須
          = f.password_field :password_confirmation, autocomplete: "new-password",placeholder: '上記と同じものを入力してください'
        .second
          %h2
            本人確認
          .bun
            安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        
        -# この下が全角名前
        .second
          = f.label :お名前（全角）
          %span
            必須
        .name
          = f.text_field :email, autofocus: true, autocomplete: "email", placeholder: '例) 香川'
        .name
          = f.text_field :email, autofocus: true, autocomplete: "email", placeholder: '例) 太郎'   
      
        -# この下がカタカナ全角名前
        .second
          = f.label :お名前カナ（全角）
          %span
            必須
        .name
          = f.text_field :email, autofocus: true, autocomplete: "email", placeholder: '例) カガワ'
        .name
          = f.text_field :email, autofocus: true, autocomplete: "email", placeholder: '例) タロウ'

        .second
          = f.label :生年月日
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '6文字以上の半角英数字'

        .second
          %h2
            配送先住所
        
        .second
          = f.label :郵便番号
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '例）760-0019'

        .second
          = f.label :都道府県
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '6文字以上の半角英数字'

        .second
          = f.label :市区町村
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '例）高松市'

        .second
          = f.label :番地
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '例）サンポート2-1'

        .second
          = f.label :建物名
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '例）高松シンボルタワー タワー棟4・5階'

        .second
          = f.label :電話番号
          %span
            必須
          = f.password_field :password, autocomplete: "new-password" ,placeholder: '例）0878220111'


.footer
  .footer__inner
    %ul
      プライバシーポリシー
      %li
      フリマ利用規約
      %li
      特定商取引に関する表記
    %h1
      = image_tag 'logo.png', alt: '', height: '49px', width: '185px', class: ''
    .small
      @FURIMA



