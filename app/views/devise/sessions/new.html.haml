= render partial: 'new_header'

.main
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .main__top
      .main__top--inner
        %p アカウントをお持ちでない方はこちら
        %p.main__top--inner__newBtn
          = link_to('新規会員登録', {})
    .main__bottom
      .main__bottom--inner
        = f.email_field :email, class: "main__bottom--inner--mail", autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
      .main__bottom--inner
        = f.password_field :password, class: "main__bottom--inner--pass", autocomplete: "current-password", placeholder: 'パスワード'
        .main__bottom--inner--in
          = f.submit "ログイン"
        .main__bottom--inner--memo
          パスワードをお忘れの方

= render partial: 'new_footer'