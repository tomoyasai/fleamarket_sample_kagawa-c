.card-data-title
  %h2 支払い方法
.under-box 
  .under-brock
    .regist-card
      %i.fas.fa-check-circle
      .regist-card__info
        = "**** **** **** " + @card_information.last4
        .regist-card__info__box
          %p 有効期限
          .regist-card__info__box__day
            - exp_month = @card_information.exp_month.to_s
            - exp_year = @card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
        = image_tag "visa-logo.svg",class: 'visa-picture'
      = link_to '削除する', card_path(current_user.card), method: :delete, class:"delete-card"
  .footer-corner 
    = link_to '#', class: 'method-payment' do
      %span.method-payment__title
        支払い方法について
      %span
      %i.fas.fa-angle-right